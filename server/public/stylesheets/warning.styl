#warning {
  .loader,
  .loader:after {
    border-radius: 50%;
    width: 10em;
    height: 10em;
  }

  .loader {
    margin: 60px auto;
    font-size: 20px;
    position: relative;
    border-top: 1.1em solid rgba(255, 180, 20, 0.2);
    border-right: 1.1em solid rgba(255, 180, 20, 0.35);
    border-bottom: 1.1em solid rgba(255, 180, 20, 0.5);
    border-left: 1.1em solid rgba(255, 180, 20, 0.65);
    -webkit-transform: translateZ(0);
    -ms-transform: translateZ(0);
    transform: translateZ(0);
    -webkit-animation: load 1.8s infinite linear;
    animation: load 1.8s infinite linear;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .loader h1 {
    -webkit-animation: load_h1 1.8s infinite linear;
    animation: load_h1 1.8s infinite linear;
    /* animation: ; */
    margin: 0;
    color: #ffb414;
  }

  .signed {
    display: inline-block;
    font-size: 1.3em;
    margin: 0 0 0 1em;
    color: #d99b16;
  }
  .flash {
    animation: flash 0.8s ease-in-out 0s infinite alternate;
  }
}

@keyframes flash {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
