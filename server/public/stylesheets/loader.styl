#pending {
  .loader,
  .loader:after {
    border-radius: 50%;
    width: 10em;
    height: 10em;
  }

  .loader {
    margin: 60px auto;
    font-size: 20px;
    position: relative;
    border-top: 1.1em solid rgba(0, 0, 0, 0.2);
    border-right: 1.1em solid rgba(0, 0, 0, 0.35);
    border-bottom: 1.1em solid rgba(0, 0, 0, 0.5);
    border-left: 1.1em solid rgba(0, 0, 0, 0.65);
    -webkit-transform: translateZ(0);
    -ms-transform: translateZ(0);
    transform: translateZ(0);
    -webkit-animation: load 1.8s infinite linear;
    animation: load 1.8s infinite linear;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .loader h1 {
    -webkit-animation: load_h1 1.8s infinite linear;
    animation: load_h1 1.8s infinite linear;
    /* animation: ; */
    margin: 0;
  }
}

@-webkit-keyframes load {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@-webkit-keyframes load_h1 {
  0% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
    opacity: 1;
  }
  50% {
    opacity: 0;
  }
  100% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
    opacity: 1;
  }
}
